
@{
    ViewBag.Title = "Edit";
}

<h2>Edit your personal data</h2>
@model PhotoSharing.Models.ApplicationUser
<form style="color:#fff;" method="post" action="/Users/Edit/@Model.Id">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.Id)
    <br />
    <i class="glyphicon glyphicon-user"></i>
    @Html.Label("UserName", "Nume utilizator", new { @class = "" })
    <br />
    @Html.EditorFor(m => m.UserName)
    <br /><br />
    <i class="glyphicon glyphicon-envelope"></i>
    @Html.Label("Email", "Email utilizator", new { @class = "" })
    <br />
    @Html.EditorFor(m => m.Email)
    <br /><br />
    <i class="glyphicon glyphicon-phone"></i>
    @Html.Label("PhoneNumber", "Numar telefon")
    <br />
    @Html.EditorFor(m => m.PhoneNumber)
    <br /><br />
    <button style="background-color:#fff; color:#000; padding:10px 20px; border-radius:10px; font-weight:bolder; margin-top:50px; margin:0 auto;" type="submit">
        Modifica datele
        utilizatorului
    </button>
</form>


